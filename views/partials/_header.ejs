<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <form method="POST" action=<% if (locals.username === undefined) { %>"/login"<% } else { %>"/logout"<% } %>>
      <div class="form-row">
        <div class="col d-flex align-items-center">
          <% if (locals.username === undefined) {%> 
            <input type="text" class="form-control" name="username" placeholder="Sign in with username">
          <% } else { %>
            <div>Logged in as: <%= locals.username %></div>
          <% } %>  
        </div>
        <button type="submit" class="btn btn-outline-dark"><% if (locals.username === undefined) { %>Sign In<% } else { %>Logout<% } %></button>
      </div>
    </form>
  </nav>
</header>